  },
  "dependencies": {
    "chalk": "4.1.2",
    "commander": "^12.0.0",
    "download-git-repo": "^3.0.2",
    "execa": "5.1.1",
    "glob": "^10.3.10",
    "gradient-string": "^2.0.2",
    "inquirer": "8.0.0",
    "ora": "5.4.1"
  },
  "devDependencies": {
    "@leedomjs/eslint-config-basic": "^0.8.3",
    "bumpp": "^9.4.0",
    "eslint": "^8.57.0",
    "lint-staged": "^15.2.2",
    "simple-git-hooks": "^2.11.0"
  }
